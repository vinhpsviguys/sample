    public IEnumerator LoadDataProgress(UnityWebRequest www)
    {
        loadingPanel.SetActive(true);
        loadingProgess = 0;
        imgProgess.fillAmount = 0;
        while (!www.isDone)
        {
            loadingProgess = www.downloadProgress;
